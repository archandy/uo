shownames 'mobiles'
for 1000
  if @findtype '0x1f03' '1194'
    waitforcontext 'self' 3 3000
    waitfortarget 3000
    target! 'found'
    waitfortarget 3000
    canceltarget
    if findlayer 'self' 22
      moveitem 'found' 'backpack'
    endif
    equipitem 'found' 22
    pause 1000
  endif
  //
  if poisoned 'self'
    cast 'cure'
    waitfortarget 1000
    @target! 'self'
  elseif hits 'self' < 90
    cast 'heal'
    waitfortarget 1000
    @target! 'self'
  endif
  //
  @canceltarget
  @clearlist 'names'
  @createlist 'names'
  //pushlist 'names' 'A Pumpkin Lord'
