  //pushlist 'names' 'Jack the Ripper'
  //pushlist 'names' 'The Guardian Of The Asylum'
  //
  @getenemy 'murderer' 'gray'
  for 0 to 'names'
    headmsg 'names[]' '996'
    if @name 'enemy' == names[]
      while @inrange 'enemy' 12
        headmsg 'â–¼' 34 'enemy'
        //
        if poisoned 'self'
          cast 'arch cure'
          waitfortarget 2000
          @target! 'self'
        elseif hits 'self' < 90
          cast 'heal'
          waitfortarget 1000
          @target! 'self'
        else
          cast 'fireball'
          waitfortarget 2000
          @target! 'enemy'
        endif
        //
