getenemy 'criminal' 'enemy' 'murderer' 'grey' 'closest'
headmsg 'enemy' 'found'
getenemy 'found'
// honor enemy
if inrange 'found' 4 and hits 'found' == maxhits 'found'
virtue 'honor'
@headmsg 'HONORED' 34 'enemy'
waitfortarget 500
target! 'found'
endif
// attack start when enemy in range 2
while @inrange 'enemy' 2
headmsg 'enemy' 'attack'
// use curse weapon
