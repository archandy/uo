getenemy 'criminal' 'enemy' 'murderer' 'grey' 'closest'
headmsg 'enemy' 'found'
getenemy 'found'
// honor enemy
if inrange 'found' 4 and hits 'found' == maxhits 'found'
virtue 'honor'
@headmsg 'HONORED' 34 'enemy'
waitfortarget 500
target! 'found'
endif
// enemy of one check
while not buffexists 1011
  cast 'enemy of one'
endif
// attack start when enemy in range 2
while @inrange 'enemy' 2
headmsg 'enemy' 'attack'
// use curse weapon
if not buffexists 1088
  cast 'curse weapon'
  pause 600
endif
// use Consecrate Weapon
if not buffexists 1082 and mana > 12
  cast 'Consecrate Weapon'
  pause 600
endif
// use lightning strike
if not buffexists 'lightning strike' and mana > 6
  cast 'lightning strike'
  pause 600
endif
// cast divine fury when stam is below 50
if stam < 50
cast 'divine fury'
else
attack 'enemy'
endwhile
